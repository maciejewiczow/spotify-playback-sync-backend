{
    "compilerOptions": {
        "lib": [
            "es7"
        ],
        "target": "ES6",
        "module": "commonjs",
        "allowJs": false,
        "sourceMap": true,
        "rootDir": "./src",
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "*": [
                "*",
                "typings/*"
            ],
            "controllers/*": [
                "controllers/*"
            ],
            "models/*": [
                "models/*"
            ],
            "middleware/*": [
                "middleware/*"
            ],
            "services/*": [
                "services/*"
            ],
            "utils/*": [
                "utils/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./src/typings"
        ],
        // "types": ["./src/typings/spotifyWebApi.d.ts"] /* Type declaration files to be included in compilation. */,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
